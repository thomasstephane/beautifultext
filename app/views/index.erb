<div class="container">
  <h1>Welcome to Beautiful Text</h1>

  <div class="element">
    <p>Enter your text to beautifulize here</p>
    <form action="/beautiful" method="post">
      <textarea name="text" id="beautiful_it" cols="30" rows="10"></textarea>
    </form>
  </div>
  <div class="element">
    <p>Result:</p>
    <div id="converted-text">
    </div>
  </div>
  <div class="element">
    <p>Changes:</p>
    <div id="changes">
    </div>
  </div>
</div>
